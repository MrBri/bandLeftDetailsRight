<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
  <title>Band on the left, Details on the right</title>

  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap-theme.min.css">
  <style>
    .row {
      margin: 1em 0 1em 0;
    }
    .nopadding {
      padding: 0 !important;
      margin: 0 !important;
    }
  </style>

</head>
<body>
  <div class="container">

    <% include partials/modal %>

    <% include partials/navbar %>

    <div class="row bands">

      <% include partials/links %>

      <%- content %>

    </div>
  </div>

  <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
  <script>
  $(document).ready(function() {
    'use strict';
    var $editing, band = {};
    $('.bands').on('blur', '[contenteditable=true]', function(e) {
      $editing = $(this);
      band.id = $editing.data('band-id');
      band.content = $editing.text();

      if ($editing.data('member-id') !== undefined) {
        band.memberId = $editing.data('member-id');
      } else if ($editing.hasClass('bandName')) {
        band.isBandName = true;
      }

      $editing.popover({
        placement: 'auto',
        title: 'Save changes?',
        content: '<%- include partials/popover %>',
        html: true
      });

      $(this).popover('show');
    });

    $('.bands')
      .on('click touchstart', '.no-save', function() {
        $editing.popover('hide');
      })
      .on('click touchstart', '.save', function() {
        var btn = $(this);
        btn.button('loading');
        $.post('/bands/' + band.id + '/edit', band)
          .done(function() {
            btn.button('saved');
            $('.no-save').button('done');
          })
          .fail(function() {
            btn.button('failed');
          });
      });

    $('.editTitle').on('click touchstart', function(e) {
      $('.active').attr('contenteditable', 'true');
    });
  });
  </script>
</body>
</html>
